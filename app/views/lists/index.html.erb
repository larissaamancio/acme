<!DOCTYPE html>
<html>
	<head>
	<link href="/assets/custom.css?body=1" media="screen" rel="stylesheet">
	<link href="/assets/bootstrap.css?body=1" media="screen" rel="stylesheet">
	</head>
	<body>
	<div class="row", style="margin-left: 70px;">
		<%=render new_list_path%>
	</div>

		<div class="container">
		  <!-- <h5>List</h5> -->
		  <% @lists.each do |l|%>
			  <div class="panel-group" id="list-refresh">
			    <div class="panel panel-default">
			      <div class="panel-heading">
			        <h4 class="panel-title">
			          <a data-toggle="collapse" href="#collapse1-<%=l.id%>"><%= l.name%></a>
			        </h4>
			      </div>
			      <div id="collapse1-<%=l.id%>" class="panel-collapse collapse">
			        <div class="panel-body">Tasks</div>
			        <%=render :partial => "accordion_list", list_id:l.id%>
			      </div>
			    </div>
			  </div>
		  <%end%>
		</div>
		
	</body>
</html>



